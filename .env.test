# Test Environment Configuration for Claude Compass

# =============================================================================
# TEST DATABASE CONFIGURATION
# =============================================================================

# Test database URL (separate from development)
DATABASE_URL=postgresql://claude_compass:password@localhost:5432/claude_compass_test

# Individual test database connection parameters
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=claude_compass_test
DATABASE_USER=claude_compass
DATABASE_PASSWORD=password

# Database connection pool settings for tests
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5
DATABASE_POOL_IDLE_TIMEOUT=10000
DATABASE_POOL_ACQUIRE_TIMEOUT=30000

# =============================================================================
# TEST LOGGING CONFIGURATION
# =============================================================================

# Minimal logging in tests
LOG_LEVEL=error
LOG_CONSOLE=false
LOG_FORMAT=simple

# =============================================================================
# TEST APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=test

# Disable MCP debug in tests
MCP_DEBUG=false

# =============================================================================
# TEST PARSING CONFIGURATION
# =============================================================================

# Smaller limits for faster tests
MAX_FILE_SIZE=100000
MAX_FILES=100
PARSE_EXTENSIONS=.js,.jsx,.ts,.tsx,.vue
INCLUDE_TEST_FILES=true
INCLUDE_NODE_MODULES=false