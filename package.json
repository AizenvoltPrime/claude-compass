{
  "name": "claude-compass",
  "version": "0.1.0",
  "description": "AI-native development environment that gives AI assistants complete contextual understanding of codebases",
  "main": "dist/src/cli/index.js",
  "bin": {
    "claude-compass": "./dist/src/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/src/cli/index.js",
    "analyze": "node dist/src/cli/index.js analyze",
    "mcp-server": "node dist/src/mcp/server.js",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai",
    "development",
    "code-analysis",
    "mcp",
    "tree-sitter",
    "graph",
    "dependencies"
  ],
  "author": "Claude Compass Team",
  "license": "MIT",
  "dependencies": {
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-typescript": "^0.21.2",
    "pg": "^8.11.5",
    "knex": "^3.1.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.1.0",
    "winston": "^3.13.1",
    "dotenv": "^16.4.5",
    "uuid": "^10.0.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.5.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.5",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "prettier": "^3.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}