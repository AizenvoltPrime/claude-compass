{
  "vue": {
    "component": {
      "fileExtensionRules": [
        {
          "extension": ".vue",
          "priority": 20,
          "entityType": "component",
          "description": "Vue single-file component"
        }
      ]
    },
    "default": {
      "directoryRules": [
        {
          "path": "/components/",
          "priority": 5,
          "entityType": "component",
          "description": "Components directory"
        },
        {
          "path": "/composables/",
          "priority": 5,
          "entityType": "composable",
          "description": "Vue composables directory"
        },
        {
          "path": "/Composables/",
          "priority": 5,
          "entityType": "composable",
          "description": "Vue composables directory (capitalized)"
        },
        {
          "path": "/stores/",
          "priority": 5,
          "entityType": "store",
          "description": "Pinia stores"
        }
      ]
    },
    "function": {
      "namePatterns": {
        "prefix": [
          {
            "pattern": "^use[A-Z]",
            "priority": 10,
            "entityType": "composable",
            "description": "Vue composable (use* pattern)",
            "fileExtensions": [".ts", ".js", ".vue"]
          },
          {
            "pattern": "^create[A-Z]",
            "priority": 10,
            "entityType": "composable",
            "description": "Vue composable (create* pattern)",
            "fileExtensions": [".ts", ".js"]
          }
        ]
      },
      "directoryRules": [
        {
          "path": "/composables/",
          "priority": 8,
          "entityType": "composable",
          "description": "Functions in composables directory"
        },
        {
          "path": "/Composables/",
          "priority": 8,
          "entityType": "composable",
          "description": "Functions in Composables directory"
        }
      ]
    },
    "variable": {
      "namePatterns": {
        "suffix": [
          {
            "pattern": "Store",
            "priority": 12,
            "entityType": "store",
            "description": "Pinia store (suffix precedence over use* prefix)"
          }
        ]
      }
    },
    "class": {
      "namePatterns": {
        "suffix": [
          {
            "pattern": "Service",
            "priority": 10,
            "entityType": "service",
            "description": "Service class"
          }
        ]
      }
    }
  }
}
