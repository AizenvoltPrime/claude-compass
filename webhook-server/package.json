{
  "name": "claude-compass-webhook-server",
  "version": "1.0.0",
  "description": "Webhook server for triggering Claude Compass incremental analysis",
  "type": "module",
  "main": "webhook-server.ts",
  "scripts": {
    "start": "ts-node webhook-server.ts",
    "dev": "nodemon webhook-server.ts",
    "build": "tsc",
    "sync": "bash scripts/sync-files.sh",
    "tunnel:start": "bash scripts/start-tunnel.sh",
    "tunnel:stop": "bash scripts/stop-tunnel.sh",
    "tunnel:status": "bash scripts/check-tunnel.sh",
    "prepm2:start": "npm run tunnel:start",
    "pm2:start": "pm2 start webhook-server.ts --interpreter ts-node --name compass-webhook",
    "postpm2:stop": "npm run tunnel:stop",
    "pm2:stop": "pm2 stop compass-webhook",
    "pm2:restart": "pm2 restart compass-webhook",
    "pm2:restart:full": "npm run pm2:stop && npm run pm2:start",
    "pm2:logs": "pm2 logs compass-webhook"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "webhook",
    "claude-compass",
    "incremental-analysis"
  ],
  "author": "",
  "license": "MIT"
}
